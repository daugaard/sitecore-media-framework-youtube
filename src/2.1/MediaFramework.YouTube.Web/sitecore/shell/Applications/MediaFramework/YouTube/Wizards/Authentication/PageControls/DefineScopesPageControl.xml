<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <DefineScopesPageControl def:inherits="Sitecore.SharedSource.MediaFramework.YouTube.Wizards.Authentication.PageControls.DefineScopesPageControl,Sitecore.SharedSource.MediaFramework.YouTube">
    <table height="100%" width="100%">
      <tr valign="top">
        <td height="100%">
          <Literal Text="YouTube Data API declares the following scopes. Select which ones you want to grant to Media Framework." />
          <br />
          <table width="100%" cellpadding="2">
            <tr>
              <td valign="top" style="padding-top: 10px;">
                <div style="font-weight: bold; font-size: 1.1em;">
                  <Checkbox ID="ScopeYouTube" Header="https://www.googleapis.com/auth/youtube" Checked="true" Disabled="true"></Checkbox>
                </div>
                <Literal Text="Manage your YouTube account" />
              </td>
            </tr>
            <tr>
              <td valign="top" style="padding-top: 10px;">
                <div style="font-weight: bold; font-size: 1.1em;">
                  <Checkbox ID="ScopeYouTubeForceSsl" Header="https://www.googleapis.com/auth/youtube.force-ssl" Checked="true" Disabled="true"></Checkbox>
                </div>
                <Literal Text="Manage your YouTube account" />
              </td>
            </tr>
            <tr>
              <td valign="top" style="padding-top: 10px;">
                <div style="font-weight: bold; font-size: 1.1em;">
                  <Checkbox ID="ScopeYouTubeReadOnly" Header="https://www.googleapis.com/auth/youtube.readonly" Checked="true" Disabled="true"></Checkbox>
                </div>
                <Literal Text="View your YouTube account" />
              </td>
            </tr>
            <tr>
              <td valign="top" style="padding-top: 10px;">
                <div style="font-weight: bold; font-size: 1.1em;">
                  <Checkbox ID="ScopeYouTubeUpload" Header="https://www.googleapis.com/auth/youtube.upload" Checked="false"></Checkbox>
                </div>
                <Literal Text="Manage your YouTube videos" />
              </td>
            </tr>
            <tr>
              <td valign="top" style="padding-top: 10px;">
                <div style="font-weight: bold; font-size: 1.1em;">
                  <Checkbox ID="ScopeYouTubePartner" Header="https://www.googleapis.com/auth/youtubepartner" Checked="true" Disabled="true"></Checkbox>
                </div>
                <Literal Text="View and manage your assets and associated content on YouTube" />
              </td>
            </tr>
          </table>
        </td>
      </tr>
      <tr>
        <td style="padding-top : 5px; padding-bottom : 5px;">
          <Literal Text="When you click Next, a browser window opens in order to complete the authorization process." />
        </td>
      </tr>
    </table>
  </DefineScopesPageControl>
</control>
